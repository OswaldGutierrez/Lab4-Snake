<Application x:Class="SnakeJuegoWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SnakeJuegoWPF"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="BackgroundColor">#E6E6FA</SolidColorBrush> <!--Color de la ventana-->
        <SolidColorBrush x:Key="GridBackgroundColor">#87CEEB</SolidColorBrush> <!--Color de la cuadricula-->
        <SolidColorBrush x:Key="GridLineColor">#D10056</SolidColorBrush> <!--Color del borde de la cuadricula-->
        <SolidColorBrush x:Key="TextColor">#EBEBEB</SolidColorBrush> <!--Color del texto-->
        <SolidColorBrush x:Key="OverlayColor">#7F000000</SolidColorBrush> <!--Color del overlay, lo que aparece por encima de la matriz o cuadricula-->
        <FontFamily x:Key="MainFont">Assets/#Droid Sans Mono</FontFamily>
    </Application.Resources>
</Application>
